<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView android:id="@+id/news_card_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="10dp"
    app:cardCornerRadius="5dp"
    android:padding="8dp"
    android:layout_marginBottom="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:background="@color/itemBackground">

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:contentDescription="@string/thumbnail_of_image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/headline"
                style="@style/NewsItemStyle"
                android:layout_height="0dp"
                android:padding="4dp"
                android:layout_weight="1"
                tools:text="Sample News Headline"
                android:textSize="14sp"
                android:textColor="@drawable/list_item_text_selector"
                />

            <TextView
                android:id="@+id/date"
                style="@style/NewsItemStyle"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:gravity="bottom"
                tools:text="Sample Date"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@drawable/list_item_text_selector"
                android:layout_marginStart="8dp" />

            <TextView
                android:id="@+id/section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:gravity="bottom"
                tools:text="Sample Section Name"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@drawable/list_item_text_selector"
                android:layout_marginStart="8dp" />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
